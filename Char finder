#include <iostream>
using namespace std;
int main() {
    string abc;
    cout<<"Enter a phrase"<<endl;
    cin>>abc;
    char chr_search;
    cout<<"Enter character";
    cin>>chr_search;
    int count = 0;
    for(int i = 0; i < abc.size(); i++){
        if(abc[i] == chr_search)
            ++count;
    }
    cout<<"there are "<<count<<" amounts of characters in the phrase";
    return 0;
    
}



